{
  "name": "@saeris/eslint-config",
  "version": "2.0.0",
  "description": "Personal collection of shareable ESLint Configs",
  "author": "Drake Costa <drake@saeris.io> (https://github.com/Saeris/)",
  "license": "MIT",
  "keywords": [
    "eslint",
    "config",
    "eslint-config"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/eslint-config.git"
  },
  "homepage": "https://github.com/saeris/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/saeris/eslint-config/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.js",
  "files": [
    "index.js",
    "base.js",
    "jest.js",
    "patch.js",
    "react.js",
    "type-aware.js",
    "typescript.js"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=10.x"
  },
  "scripts": {
    "ci": "yarn test --silent && codecov",
    "lint": "yarn test:lint",
    "format": "yarn test:lint --fix",
    "prepare": "is-ci || husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks",
    "test": "run-s test:*",
    "test:lint": "eslint \"./src/**/*.{j,t}s?(x)\"",
    "test:unit": "jest -c ./jest.config.js",
    "test:typecheck": "tsc --noEmit",
    "typecheck": "yarn test:typecheck",
    "release": "np"
  },
  "peerDependencies": {
    "eslint": ">= 7.17.0",
    "typescript": ">= 4.2.4"
  },
  "devDependencies": {
    "@babel/core": ">= 7.12.10",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/runtime": "^7.13.10",
    "@types/eslint": "^7.2.7",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": ">= 4.13.0",
    "@typescript-eslint/parser": ">= 4.13.0",
    "codecov": "^3.8.1",
    "commitlint": "^12.1.1",
    "eslint": ">= 7.17.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": ">= 2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-promise": ">= 4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "np": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "typescript": "^4.2.4"
  },
  "np": {
    "branch": "main",
    "2fa": false
  },
  "dependencies": {
    "@rushstack/eslint-patch": "^1.0.6",
    "@typescript-eslint/eslint-plugin": ">= 4.13.0",
    "@typescript-eslint/parser": ">= 4.13.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": ">= 2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-promise": ">= 4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "is-ci": "^3.0.0"
  }
}
