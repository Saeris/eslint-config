{
  "name": "@saeris/eslint-config",
  "version": "3.0.0",
  "description": "Personal collection of shareable ESLint Configs",
  "author": "Drake Costa <drake@saeris.io> (https://github.com/Saeris/)",
  "license": "MIT",
  "keywords": [
    "eslint",
    "config",
    "eslint-config"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/eslint-config.git"
  },
  "homepage": "https://github.com/saeris/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/saeris/eslint-config/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=20.x"
  },
  "packageManager": "yarn@4.9.1",
  "type": "module",
  "main": "src/index.js",
  "files": [
    "src/*",
    "!src/__tests__/**/*"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./src/index.js",
    "./base": "./src/base.js",
    "./jest": "./src/jest.js",
    "./next": "./src/next.js",
    "./react": "./src/react.js",
    "./storybook": "./src/storybook.js",
    "./stylistic": "./src/stylistic.js",
    "./type-aware": "./src/type-aware.js",
    "./typescript": "./src/typescript.js",
    "./vitest": "./src/vitest.js"
  },
  "sideEffects": false,
  "scripts": {
    "ci": "yarn lint && yarn typecheck && yarn test",
    "build": "tsdown",
    "lint": "eslint \"./src/**/*.{j,t}s?(x)\"",
    "format": "yarn lint --fix",
    "release": "yarn build && changeset publish",
    "test": "vitest --fileParallelism",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@eslint/js": "^9.28.0",
    "@next/eslint-plugin-next": "^15.3.3",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@vitest/eslint-plugin": "^1.2.1",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import-x": "^4.15.1",
    "eslint-plugin-jest": "^28.13.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.0.5",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.2.0",
    "typescript-eslint": "^8.33.1"
  },
  "peerDependencies": {
    "eslint": ">= 9.26.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@types/node": "^22.15.30",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.12.7",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
